{
	"image": "mcr.microsoft.com/devcontainers/universal:2",
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {},
		"ghcr.io/dapr/cli/dapr-cli:0": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"github.copilot",
        		"github.copilot-chat",
				"ms-kubernetes-tools.vscode-kubernetes-tools",
				"ms-azuretools.vscode-dapr"
			]
